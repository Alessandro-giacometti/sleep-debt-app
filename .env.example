# Environment: 'dev' for development, 'prod' for production
ENVIRONMENT=dev

# Database path (production uses absolute path from config_prod.py)
# Non serve specificarlo se ENVIRONMENT=prod, ma puoi lasciarlo per chiarezza
DB_PATH=/opt/sleep-debt-app/data/sleep_debt.db

# Garmin Connect credentials (IMPORTANTE: inserisci le tue credenziali reali)
GARMIN_EMAIL=your_email@example.com
GARMIN_PASSWORD=your_password

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Sleep target configuration (ore di sonno target per giorno)
TARGET_SLEEP_HOURS=8.0

# Statistics window (numero di giorni per calcolare il debito)
STATS_WINDOW_DAYS=7